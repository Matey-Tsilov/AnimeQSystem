@using AnimeQSystem.Web.Models.ViewModels.Anime

@model AnimeLongCardViewModel

<a asp-action="Details" asp-route-animeId="@Model.Id" class="anime-card-link">
    <div class="card anime-card">
        <div class="row g-0 align-items-center">
            <!-- Image Section -->
            <div class="col-auto">
                <div class="image-container">
                    <img src="@Model.AnimePicUrl" alt="@Model.Title picture" class="img-fluid">
                </div>
            </div>
            <!-- Content Section -->
            <div class="col">
                <div class="card-body d-flex flex-column gap-2">
                    <div class="d-flex align-items-center gap-3">
                        <!-- Title -->
                        <div class="title-container">
                            <h5 class="card-title mb-0">@Model.Title</h5>
                        </div>
                        <!-- Genre -->
                        <div class="genre-container">
                            <p class="card-text mb-0 text-muted">
                                <strong>Genre:</strong> @Model.Genre.Name
                            </p>
                        </div>
                        <!-- Rating -->
                        <div class="rating-container">
                            <p class="card-text mb-0">
                                <strong>Rating:</strong> @Model.Rating <span class="text-warning">⭐</span>
                            </p>
                        </div>
                    </div>
                    <!-- Description -->
                    <div class="description-container mt-2">
                        <p class="card-text mb-0"><strong>Plot:</strong> @Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>